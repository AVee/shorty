# these rules try to detect any requests that carry a "shorty key" and map them to forward.php?<shorty key>
# that way you can use shorter (or more simple) urls to publish or relay links

RewriteEngine On

# example: http://.../apps/shorty/index.php/0123456789
RewriteRule "^index\.php/([a-z0-9]{10})$"  "forward.php?$1" [L]
# example: http://.../apps/shorty//0123456789
RewriteRule "^([a-z0-9]{10})$"  "forward.php?$1" [L]

# example: http://.../apps/shorty/index.php?0123456789
RewriteCond     %{QUERY_STRING} ^([a-z0-9]{10})$
RewriteRule     ^index\.php     forward.php?%{QUERY_STRING}     [L]

# example: http://.../apps/shorty/?0123456789
RewriteCond     %{QUERY_STRING} ^([a-z0-9]{10})$
RewriteRule     ^$     forward.php?%{QUERY_STRING}     [L]
