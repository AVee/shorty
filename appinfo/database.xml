<!--
  /**
  * @file appinfo/database.xml
  * @brief Database scheme definition for apps table
  * @author Christian Reiner
  */
 -->

<database>
  <name>*dbname*</name>
  <create>true</create>
  <overwrite>false</overwrite>
  <charset>utf8</charset>
  <table>
    <name>*dbprefix*shorty_tracking</name>
    <declaration>
      <field>
        <name>id</name>
        <type>text</type>
        <length>12</length>
        <notnull>true</notnull>
      </field>
      <field>
        <name>time</name>
        <type>timestamp</type>
        <notnull>false</notnull>
        <default></default>
      </field>
      <field>
        <name>address</name>
        <type>text</type>
        <length>23</length>
        <notnull>true</notnull>
        <default></default>
      </field>
      <field>
        <name>domain</name>
        <type>text</type>
        <length>23</length>
        <notnull>true</notnull>
        <default></default>
      </field>
      <field>
        <name>user</name>
        <type>text</type>
        <length>64</length>
        <notnull>true</notnull>
        <default></default>
      </field>
      <field>
        <name>result</name>
        <type>text</type>
        <length>10</length>
        <notnull>true</notnull>
        <default></default>
      </field>

      <index>
        <name>index_shorty</name>
        <unique>true</unique>
        <field>
          <name>id</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>index_time</name>
        <unique>true</unique>
        <field>
          <name>time</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>index_address</name>
        <unique>false</unique>
        <field>
          <name>address</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>index_domain</name>
        <unique>false</unique>
        <field>
          <name>domain</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>index_user</name>
        <unique>false</unique>
        <field>
          <name>user</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>index_result</name>
        <unique>false</unique>
        <field>
          <name>result</name>
          <sorting>descending</sorting>
        </field>
      </index>
    </declaration>
 </table>
</database>
