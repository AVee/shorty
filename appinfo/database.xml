<database>
  <name>*dbname*</name>
  <create>true</create>
  <overwrite>false</overwrite>
  <charset>latin1</charset>
  <table>
    <name>*dbprefix*shorty</name>
    <declaration>
      <field>
        <name>key</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>12</length>
      </field>
      <field>
        <name>title</name>
        <type>text</type>
        <default>''</default>
        <notnull>true</notnull>
        <length>80</length>
      </field>
      <field>
        <name>favicon</name>
        <type>text</type>
        <default>''</default>
        <notnull>false</notnull>
        <length>1024</length>
      </field>
      <field>
        <name>source</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>4096</length>
      </field>
      <field>
        <name>target</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>4096</length>
      </field>
      <field>
        <name>user</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>64</length>
      </field>
      <field>
        <name>until</name>
        <type>integer</type>
        <notnull>false</notnull>
        <unsigned>true</unsigned>
        <length>10</length>
      </field>
      <field>
        <name>created</name>
        <type>integer</type>
        <notnull>true</notnull>
        <default>CURRENT_TIMESTAMP</default>
        <unsigned>true</unsigned>
        <length>10</length>
      </field>
      <field>
        <name>accessed</name>
        <type>integer</type>
        <notnull>false</notnull>
        <unsigned>true</unsigned>
        <length>10</length>
      </field>
      <field>
        <name>clicks</name>
        <type>integer</type>
        <default>0</default>
        <notnull>true</notnull>
        <unsigned>true</unsigned>
        <length>10</length>
      </field>
      <field>
        <name>notes</name>
        <type>text</type>
        <default>''</default>
        <notnull>true</notnull>
        <length>4096</length>
      </field>

      <index>
        <name>shorty_key</name>
        <unique>true</unique>
        <field>
          <name>key</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>shorty_target</name>
        <unique>false</unique>
        <field>
          <name>target</name>
          <sorting>descending</sorting>
        </field>
      </index>
      <index>
        <name>shorty_title</name>
        <unique>false</unique>
        <field>
          <name>title</name>
          <sorting>descending</sorting>
        </field>
      </index>
    </declaration>
 </table>
</database>
